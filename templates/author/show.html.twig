{% extends 'base.html.twig' %}

{% block title %}Author{% endblock %}

{% block body %}
    <h1>Author</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ author.id }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ author.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ author.lastName }}</td>
            </tr>
            <tr>
                <th>YearOfBirth</th>
                <td>{{ author.yearOfBirth }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ author.country }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ author.telephone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ author.email }}</td>
            </tr>
        </tbody>
    </table>

    <h2>Books:</h2>
        {% if author.bookAuthors|length > 0 %}
            <ul>
                {% for bookAuthor in author.bookAuthors %}
                    <li>{{ bookAuthor.book.title }} - Published: {{ bookAuthor.book.yearOfPublication }}</li>
                    {# Add more details as needed #}
                {% endfor %}
            </ul>
    {% else %}
        <p>This author has not authored any books.</p>
    {% endif %}

    <a href="{{ path('app_author_index') }}">back to list</a>

    <a href="{{ path('app_author_edit', {'id': author.id}) }}">edit</a>

    {{ include('author/_delete_form.html.twig') }}
{% endblock %}
